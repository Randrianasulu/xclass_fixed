
SHELL=/bin/sh

@SET_MAKE@

top_srcdir=@top_srcdir@
srcdir=@srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
x_includes=@x_includes@
x_libraries=@x_libraries@

CXX=@CXX@
INCLUDES=-I${top_srcdir}/include ${x_includes}
CXXFLAGS=${INCLUDES} @CXXFLAGS@
LIBS=-L${top_srcdir}/lib/libxclass -lxclass ${x_libraries}
EXTRALIBS=-lXpm -lXext -lX11
LDFLAGS=@LDFLAGS@
MAKEDEPEND=@MAKEDEPEND@

SRCS = btest.cc \
	colorsel.cc \
	combotest.cc \
	docktest.cc \
	exec.cc \
	favordlg.cc \
	ftest.cc \
	listview.cc \
	mditest.cc \
	progbar.cc \
	resizer.cc \
	spinnertest.cc \
	shutter.cc \
	shutter1.cc \
	test4.cc \
	textedit.cc \
	wintest.cc \
	xdnd.cc

OBJS = $(SRCS:%.cc=%.o)

PROG = $(SRCS:%.cc=%)


include ${top_srcdir}/config/C++.rules.in


all: ${PROG}

shared: all

depend:
	${MAKEDEPEND} ${CXXFLAGS} ${SRCS}

install_shared: install

install: 

clean:
	${RM} ${OBJS} $(PROG) *~ core *.bak

distclean: clean

${PROG}: ${OBJS}
	$(CXX) -o $@ $@.o $(LDFLAGS) $(LIBS) $(EXTRALIBS)
	strip $@

